<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <properties resource="mybatis/database.properties"/>

    <typeHandlers>
        <typeHandler handler='com.solvd.util.enums.AcreditationTypeHandler'/>
    </typeHandlers>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${db.driver}"/>
                <property name="url" value="${db.url}"/>
                <property name="username" value="${db.user}"/>
                <property name="password" value="${db.pass}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mybatis/mappersxml/auditoryMapper.xml"/>
        <mapper resource="mybatis/mappersxml/chairMapper.xml"/>
        <mapper resource="mybatis/mappersxml/facultyMapper.xml"/>
        <mapper resource="mybatis/mappersxml/gradeBookMapper.xml"/>
        <mapper resource="mybatis/mappersxml/groupMapper.xml"/>
        <mapper resource="mybatis/mappersxml/scheduleMapper.xml"/>
        <mapper resource="mybatis/mappersxml/studentMapper.xml"/>
        <mapper resource="mybatis/mappersxml/subjectMapper.xml"/>
        <mapper resource="mybatis/mappersxml/teacherMapper.xml"/>
        <mapper resource="mybatis/mappersxml/universityMapper.xml"/>
    </mappers>

</configuration>